<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/android_studio_hello_world_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android_studio_and_hello_world"
        app:layout_constraintBottom_toTopOf="@+id/your_first_interactive_ui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/your_first_interactive_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_first_interactive_ui"
        app:layout_constraintBottom_toTopOf="@+id/the_layout_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/android_studio_hello_world_button" />

    <Button
        android:id="@+id/the_layout_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_layout_editor_linear"
        app:layout_constraintBottom_toTopOf="@+id/the_layout_editor_relative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_first_interactive_ui" />

    <Button
        android:id="@+id/the_layout_editor_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_layout_editor_relative"
        app:layout_constraintBottom_toTopOf="@+id/text_and_scrolling_views_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/the_layout_editor" />

    <Button
        android:id="@+id/text_and_scrolling_views_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_and_scrolling_views"
        app:layout_constraintBottom_toTopOf="@+id/two_activities_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/the_layout_editor_relative" />

    <Button
        android:id="@+id/two_activities_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_activities"
        app:layout_constraintBottom_toTopOf="@+id/activity_lifecycle_state_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_and_scrolling_views_button" />

    <Button
        android:id="@+id/activity_lifecycle_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_lifecycle_and_state"
        app:layout_constraintBottom_toTopOf="@+id/implicit_intents_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_activities_button" />

    <Button
        android:id="@+id/implicit_intents_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/implicit_intents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_lifecycle_state_button" />


</androidx.constraintlayout.widget.ConstraintLayout>